@model PD_212_MVC.Models.Teacher

@{
	ViewData["Title"] = "AddDiscipline";
}

<h1>Discipline added</h1>

<div>
	<h4>Teacher</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.last_name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.last_name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.first_name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.first_name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.middle_name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.middle_name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.birth_date)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.birth_date)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.work_since)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.work_since)
		</dd>
	</dl>
</div>

<div>
	<a asp-action="Edit" asp-route-id="@Model?.teacher_id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>

@if (Model.Disciplines != null)
{
	<div>
		<h3>Преподаватель может вести следуюшие дисциплины (@Model.Disciplines.Count шт):</h3>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Дисциплина</th>
				<th>Количество занятий</th>
			</tr>

			@foreach (TeachersDisciplinesRelation d in Model.Disciplines)
			{
				<tr>
					<td>@d.Discipline.discipline_id</td>
					<td>@d.Discipline.discipline_name</td>
					<td>@d.Discipline.number_of_lessons</td>
				</tr>
			}

		</table>
	</div>
}